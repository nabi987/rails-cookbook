<div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>')">
  <div>
    <h1>Cookbook</h1>
    <h3>Save your favourite recipes</h3>
  </div>
</div>

<div class="container">
  <div class="title-top">
    <div>
      <h2>List of categories</h2>
    </div>
    <div>
      <%= link_to "New category", new_category_path, class: "btn btn-warning" %>
    </div>
  </div>

  <div class="cards">
    <% @categories.each do|category| %>
      <%= link_to category_path(category) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "card.jpg" %>')">
          <p><%= category.name %></p>
          <p><%= category.recipes.count %> recipes </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
