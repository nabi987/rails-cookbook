<div class="banner" style="background-image: url('<%= image_path "card.jpg" %>')">
  <h1>Add a recipe to <%= @category.name %></h1>
</div>
<div class="form">
  <%= simple_form_for [@category, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :recipe %>
  <%= f.submit class: "btn btn-warning" %>
  <% end %>
</div>

<div>
  <%= link_to "Back to #{@category.name}", category_path(@category), class: "btn btn-warning" %>
</div>
